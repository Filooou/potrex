{
  "manifest_version": 2,

  "name": "PH for accountant: algorithm analysis toolkit",
  "short_name": "i-am-an-accountant",
  "description": "A personalization scraper to analyze the biggest adult-industry content provider: https://pornhub.tracking.exposed",
  "version": "0.4.3",
  "author": "few proud humans (and robots) challenging the algorithm monopolists: we're https://tracking.exposed",

  "icons": {
      "16": "potrex16.png",
      "48": "potrex48.png",
      "128": "potrex128.png"
  },

  "browser_action": {
      "default_icon": "potrex16.png",
      "default_popup": "popup.html"
  },

  "permissions": [
    "http://localhost:10000/",
    "storage"
  ],

  "background": {
      "scripts": ["./background.js"],
      "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
          "http://localhost/*",
          "http://127.0.0.1/*",
          "https://*.pornhub.com/*"
      ],
      "js": ["./app.js"]
    }
  ],

  "web_accessible_resources": [
      "*.png"
  ]
}
