{
  "manifest_version": 2,

  "name": "pornhub.tracking.exposed",

  "short_name": "data porn: the 2020 olimpic game!",
  "description": "Join a collective observation of the pornhub algorithm!",
  "version": "0.2.5",
  "author": "few proud humans (and robots!) who challenge the algorithm monopolists, we're https://tracking.exposed",

  "icons": {
      "16": "potrex16.png",
      "48": "potrex48.png",
      "128": "potrex128.png"
  },

  "browser_action": {
      "default_icon": "potrex16.png",
      "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "http://localhost:10000/",
    "https://*.pornhub.com/",
    "https://*.tracking.exposed/"
  ],

  "background": {
      "scripts": ["./background.js"],
      "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
          "http://localhost/*",
          "http://127.0.0.1/*",
          "https://*.tracking.exposed/*",
          "https://*.pornhub.com/*"
      ],
      "js": ["./app.js"]
    }
  ],

  "web_accessible_resources": [
      "*.png"
  ]
}
